<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://dubbo.apache.org/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://dubbo.apache.org/schema/dubbo http://dubbo.apache.org/schema/dubbo/dubbo.xsd">

    <!--指定当前工程在管控平台的名称-->
    <dubbo:application name="05-provider-group"/>

    <!--指定注册中心:zk单机-->
    <dubbo:registry address="zookeeper://127.0.0.1:2181"/>
    <!--<dubbo:registry protocol="zookeeper" address="127.0.0.1:2181"/>-->

    <!--zookeeper注册中心：集群配置-->
    <!--<dubbo:registry address="zookeeper://127.0.0.1:2181?backup=127.0.0.1:2182,127.0.0.1:2183,127.0.0.1:2184"/>-->
    <!--<dubbo:registry protocol="zookeeper" address="127.0.0.1:2181,127.0.0.1:2182,127.0.0.1:2183,127.0.0.1:2184"/>-->

    <dubbo:protocol name="dubbo" port="20880"/>
    <dubbo:protocol name="rmi" port="1099"/>


    <!--注册业务接口实现类，它是真正的服务提供者-->
    <bean id="aiPayService" class="com.dubbo.provider.AiPaySomeServiceImpl"/>
    <bean id="weChatService" class="com.dubbo.provider.WeChatSomeServiceImpl"/>

    <!--对外暴露的服务接口-->
    <dubbo:service interface="com.dubbo.service.SomeService"
                   ref="aiPayService" version="0.0.1" group="pay.aipay"/>

    <dubbo:service interface="com.dubbo.service.SomeService"
                   ref="weChatService" version="0.0.1" group="pay.wechat"
                   protocol="rmi"/>
</beans>